@article{kamal2014higher,
  title     = {Higher Order Super-Twisting Algorithm},
  author    = {Shyam Kamal and Asif Chalanga and J.A. Moreno and L. Fridman and B. Bandyopadhyay},
  journal   = {IEEE Transactions on Automatic Control},
  year      = {2014},
  note      = {Preprint},
  abstract  = {Generalization of the Super-Twisting algorithm (STA) for $r$ relative degree system with respect to output, ensuring finite time convergence to the set $\sigma, \dot{\sigma}, \ldots, \sigma^{(r)}$ where $\sigma$ represents the output via absolutely continuous control signal using information of $\sigma, \dot{\sigma}, \ldots, \sigma^{(r-1)}$. The convergence conditions for the 3-STA algorithm are proposed. The formula for algorithm of arbitrary order is suggested. The simulations results are confirmed the efficiency of the proposed algorithm.}
}

@article{tietze2024local,
  title     = {Local stabilization of systems with time- and state-dependent perturbations using super-twisting integral sliding-mode control},
  author    = {Niclas Tietze and Kai Wulff and Johann Reger},
  journal   = {European Control Conference},
  year      = {2024},
  pages     = {3285--3291},
  address   = {Stockholm, Sweden},
  abstract  = {We consider a super-twisting sliding-mode controller with an integral sliding variable. The system is subject to time- and state-dependent perturbations. Our stability analysis yields an estimate for the region of attraction as well as bounds for the control signal and the sliding variables. We demonstrate the results with a numerical example.}
}

@article{tietze2024localStabilisation,
  title     = {Local stabilisation of nonlinear systems with time- and state-dependent perturbations using sliding-mode model-following control},
  author    = {Niclas Tietze and Kai Wulff and Johann Reger},
  journal   = {IEEE Conference on Decision and Control},
  year      = {2024},
  address   = {Milan, Italy},
  abstract  = {We study the problem of local stabilisation of a class of nonlinear systems subject to time- and state-dependent perturbations using a two-degree-of-freedom model-following control (MFC) scheme. We consider a stabilising linear state feedback for the MCL with a first-order as well as a super-twisting sliding-mode controller for the PCL. Our stability analysis of the closed-loop system shows that the estimate of the region of attraction depends on the initialisation of the MCL. We illustrate our results by a numerical example.}
}

@article{tietze2025dynamic,
  title     = {Local stability analysis for sliding mode control with unbounded perturbations - Dynamic sliding mode design revisited},
  author    = {Niclas Tietze and Kai Wulff and Johann Reger},
  journal   = {Preprint},
  year      = {2025},
  abstract  = {We analyse the local stability properties of sliding mode control designs with a dynamic sliding variable. We apply both, first-order and super-twisting control to a system which is subject to unbounded state- and time-dependent perturbations. Our stability analysis yields an estimate of the region of attraction given by invariant sets. We illustrate our results by an example.}
}

